jQuery(function($) {
  $('body').on('click', '.nav__trigger', function toggleNavigation(e) {
    var nav = $('nav');
    if (nav.hasClass('open')) {
      nav.css('height', 0);
      nav.toggleClass('open');
    } else {
      nav.css('height', nav.find('.nav__container').outerHeight(true));
      nav.toggleClass('open');
    }
  });
});
