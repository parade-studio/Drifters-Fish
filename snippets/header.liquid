<header>
  <nav role="navigation">
    <div class="nav__container">
      {{ 'df-seal.svg' | asset_url | img_tag: null, 'seal' }}
      <a href="/">
        {{ 'df-logo-straight-white.svg' | asset_url | img_tag: null, 'logo' }}
      </a>
      <ul>
        {% for link in linklists.main-menu.links %}
        <li class="{% if link.active %} active{% endif %}{% if forloop.first %} first{% elsif forloop.last %} last{% endif %}">
          <a href="{{ link.url }}"><h3>{{ link.title }}</h3></a>
        </li>
        {% endfor %}
      </ul>
    </div>
  </nav>
  <p class="nav__trigger">{{ 'df-wave-menu.svg' | asset_url | img_tag }}</p>
</header>