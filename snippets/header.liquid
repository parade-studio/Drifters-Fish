<header>
  <nav role="navigation">
    <div class="nav__container">
      {{ 'df-seal.svg' | asset_url | img_tag: null, 'seal' }}
      <a href="/" class="mobile-only">
        {{ 'df-logo-straight-white.svg' | asset_url | img_tag: null, 'logo' }}
      </a>
      <div class="nav__links desktop-only">
        <ul>
          <li>
            <a href="/pages/buy" class="{% if link.active %}active{% endif %}">Shop Salmon</a>
          </li>
          <li>
            <a href="/pages/about-us" {% if link.active %}class="active"{% endif %}>Know Your Fisherman</a>
          </li>
          <li class="desktop-only">
            <a href="/" class="home">{{ 'df-logo-straight-blue.svg' | asset_url | img_tag: null, 'logo' }}</a>
          </li>
          <li>
            <a href="/pages/around-the-table" class="{% if link.active %}active{% endif %}">Around the Table</a>
          </li>
          <li>
            <a href="/pages/contact" class="{% if link.active %}active{% endif %}">Contact Us</a>
            {% if cart.item_count >= 1 %}
              <span><a href="/cart" class="cart-count">({{ cart.item_count }})</a></span>
            {% endif %}
          </li>
        </ul>
      </div>
      <div class="nav__links mobile-only">
        <ul>
          {% for link in linklists.main-menu.links %}
          <li class="{% if link.active %} active{% endif %}{% if forloop.first %} first{% elsif forloop.last %} last{% endif %}">
            <a href="{{ link.url }}" class="{{ link.title | downcase }}">{{ link.title }}</a>
          </li>
          {% endfor %}
        </ul>
    </div>
  </nav>
  <p class="mobile__cart mobile-only">
    {% if cart.item_count >= 1 %}
      <span><a href="/cart" class="cart-count">({{ cart.item_count }})</a></span>
    {% endif %}
  </p>
  <p class="mobile__logo"><a href="/" class="mobile-only">{{ 'df-logo-straight-blue.svg' | asset_url | img_tag }}</a>
  <p class="nav__trigger"></p>
</header>
{% include 'loader' %}